---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { locales } from '../../i18n/ui'
const currentLang = Astro.currentLocale as string
---

<ul class="flex items-center justify-center gap-4">
  {
    locales.map((lang) => (
      <li>
        {lang === currentLang ? (
          <strong class="text-sm font-bold uppercase text-slate-600 dark:text-slate-300">
            {lang}
          </strong>
        ) : (
          <a
            href={getRelativeLocaleUrl(lang as string, '/')}
            class="text-sm uppercase text-slate-600 hover:underline dark:text-slate-300"
          >
            {lang}
          </a>
        )}
      </li>
    ))
  }
</ul>
