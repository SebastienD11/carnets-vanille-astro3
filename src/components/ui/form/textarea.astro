---
type Props = {
  name: string
  label: string
  placeholder?: string
  id?: string
  required?: boolean
}

const { id, name, label, required, placeholder }: Props = Astro.props
---

<div>
  <label for={id ? id : null} class="sr-only">{label}</label>
  <textarea
    name={name ? name : null}
    id={id ? id : null}
    rows="4"
    class="peer block w-full appearance-none border-0 border-b-2 border-stone-900 bg-stone-900/5 px-2.5 pb-2.5 pt-5 text-sm text-stone-900 placeholder:text-stone-500 focus:outline-hidden focus:ring-0 dark:border-stone-600 dark:bg-stone-600/40 dark:text-stone-50 dark:placeholder:text-stone-300"
    placeholder={placeholder ? placeholder : null}
    required={required}></textarea>
</div>
