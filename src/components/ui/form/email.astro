---
type Props = {
  name: string
  label: string
  id?: string
  required?: boolean
}

const { id, name, label, required }: Props = Astro.props
---

<div class="relative">
  <input
    type="email"
    class="peer block w-full appearance-none rounded-xs border-0 border-b-2 border-stone-900 bg-stone-900/5 px-2.5 pb-2.5 pt-5 text-sm text-stone-900 focus:outline-hidden focus:ring-0 dark:border-stone-600 dark:bg-stone-600/40 dark:text-stone-50"
    id={id ? id : null}
    name={name}
    placeholder=" "
    required={required}
  />
  <label
    for={id ? id : null}
    class="absolute start-2.5 top-4 z-10 origin-[0] -translate-y-4 scale-75 transform text-sm text-stone-500 duration-300 peer-placeholder-shown:translate-y-0 peer-placeholder-shown:scale-100 peer-focus:-translate-y-4 peer-focus:scale-75 dark:text-stone-300"
  >
    {label}
  </label>
</div>
