---
const { as, title, subtitle, className } = Astro.props
const HeadingTag = as || 'span'
---

<div class={`${className} text-center flex items-center flex-col justify-center gap-2`}>
  {
    title && (
      <HeadingTag class="block text-xl font-extrabold leading-tight lg:text-2xl xl:text-3xl">
        {title}
      </HeadingTag>
    )
  }
  {subtitle && <span class="text-stone-500 dark:text-stone-300">{subtitle}</span>}
</div>
