---
interface Props {
  date: string
  className?: string
}

const { date, className } = Astro.props
const dateInJs = new Date(date)
---

<time datetime={dateInJs.toISOString()} class={className}>
  {
    dateInJs.toLocaleDateString('fr-FR', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  }
</time>
