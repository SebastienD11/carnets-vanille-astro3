---
import type { Post } from '../../api/post'
import { useTranslations } from '../../i18n/ui'

type Props = {
  post: Post
}

const { post } = Astro.props
const lang = Astro.currentLocale as string
const t = useTranslations(lang)
---

<div class="flex flex-wrap items-center justify-center gap-4">
  <a
    class="border-zink-900 bg-zink-900 text-zink-50 dark:border-zink-50 flex items-center rounded-lg border px-8 py-2 transition hover:-translate-y-1 hover:no-underline hover:shadow-lg"
    href={`https://twitter.com/intent/tweet?text=${post.title.rendered}, ${post.link}&via=carnetsvanille`}
    target="_blank"
    rel="noopener"
    data-network="Twitter"
  >
    <span class="mr-2">{t('socialLinks.twitter.share')}</span>
    <i class="icon-twitter text-md text-zink-50"></i>
  </a>
  <a
    class="border-zink-900 bg-zink-900 text-zink-50 dark:border-zink-50 flex items-center rounded-lg border px-8 py-2 transition hover:-translate-y-1 hover:no-underline hover:shadow-lg"
    href={`https://www.facebook.com/sharer/sharer.php?u=${post.link}`}
    target="_blank"
    rel="noopener"
    data-network="Facebook"
  >
    <span class="mr-2">{t('socialLinks.facebook.share')}</span>
    <i class="icon-facebook text-md text-zink-50"></i>
  </a>
  {
    post.comment_status === 'open' && (
      <a
        class="border-zink-900 bg-zink-900 text-zink-50 dark:border-zink-50 flex items-center rounded-lg border px-8 py-2 transition hover:-translate-y-1 hover:no-underline hover:shadow-lg"
        href="#comments"
      >
        <span class="mr-2">{t('post.footer.comment')}</span>
        <i class="icon-pen text-md text-zink-50" />
      </a>
    )
  }
</div>
